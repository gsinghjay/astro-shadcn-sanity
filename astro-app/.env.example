# Docker: This file is loaded by docker-compose.yml via env_file.
# Copy to .env and fill in your values before running `docker compose up`.

# Remember to add PUBLIC_ if generated by npx sanity init --env
PUBLIC_SANITY_STUDIO_PROJECT_ID="<your-project-id>"
PUBLIC_SANITY_STUDIO_DATASET="production"

# Visual Editing / Presentation Tool
PUBLIC_SANITY_VISUAL_EDITING_ENABLED="true"
SANITY_API_READ_TOKEN="<your-read-token>"

# Live Content API (real-time content updates without full rebuild)
# Set to "true" to enable client-side live content subscriptions
PUBLIC_SANITY_LIVE_CONTENT_ENABLED="false"

# Google Tag Manager (leave empty to disable tracking)
PUBLIC_GTM_ID="GTM-XXXXXXXX"

# Sanity Studio URL (for Visual Editing "Edit in Studio" links)
# Local dev: http://localhost:3333 (default if omitted)
# Production: https://ywcccapstone.sanity.studio
PUBLIC_SANITY_STUDIO_URL="http://localhost:3333"

# Production site URL (used for canonical URLs and sitemap)
PUBLIC_SITE_URL="https://ywcc-capstone.pages.dev"

# Cloudflare Access (portal authentication — Story 9.1)
CF_ACCESS_TEAM_DOMAIN="https://ywcc-capstone-pages.cloudflareaccess.com"
CF_ACCESS_AUD=""  # Application Audience tag from CF Zero Trust dashboard

# Cloudflare Turnstile (bot protection)
PUBLIC_TURNSTILE_SITE_KEY="<your-turnstile-site-key>"

# Server-side secrets (set in .dev.vars for local, wrangler secret put for prod)
# TURNSTILE_SECRET_KEY — from Cloudflare Turnstile dashboard
# DISCORD_WEBHOOK_URL — from Discord channel > Integrations > Webhooks
# SANITY_API_WRITE_TOKEN — from manage.sanity.io > Settings > API > Tokens (Editor role)

---
import Accordion from './accordion.astro'
import AccordionItem from './accordion-item.astro'
import AccordionContent from './accordion-content.astro'

interface Props {
  items?: Array<{ title: string; content: string }>
  openFirst?: boolean
}

const { items = [{ title: 'Item 1', content: 'Content for item 1' }], openFirst = false } = Astro.props
---
<Accordion>
  {items.map((item, i) => (
    <AccordionItem open={openFirst && i === 0}>
      <summary
        data-slot="accordion-trigger"
        class="focus-visible:border-ring focus-visible:ring-ring/50 flex flex-1 items-start justify-between gap-4 rounded-md py-4 text-left text-sm font-medium transition-all outline-none hover:underline focus-visible:ring-[3px] cursor-pointer list-none [&::-webkit-details-marker]:hidden group-open:[&>svg]:rotate-180"
      >
        <span class="flex-1">{item.title}</span>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground pointer-events-none size-4 shrink-0 translate-y-0.5 transition-transform duration-200"><path d="m6 9 6 6 6-6"/></svg>
      </summary>
      <AccordionContent>{item.content}</AccordionContent>
    </AccordionItem>
  ))}
</Accordion>

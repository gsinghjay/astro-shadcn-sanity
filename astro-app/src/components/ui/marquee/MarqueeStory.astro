---
import Marquee from './marquee.astro'
import MarqueeContent from './marquee-content.astro'

interface Props {
  items?: string[]
  direction?: 'left' | 'right'
  pauseOnHover?: boolean
}

const {
  items = ['React', 'TypeScript', 'Node.js', 'Python', 'AWS', 'Docker', 'PostgreSQL', 'Astro'],
  direction = 'left',
  pauseOnHover = false,
} = Astro.props
---
<Marquee>
  <MarqueeContent direction={direction} pauseOnHover={pauseOnHover}>
    <div class="flex gap-12">
      {items.map((item) => (
        <span class="text-lg font-semibold whitespace-nowrap text-muted-foreground">{item}</span>
      ))}
    </div>
  </MarqueeContent>
</Marquee>

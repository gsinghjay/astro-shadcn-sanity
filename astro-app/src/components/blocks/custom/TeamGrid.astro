---
import type { TeamGridBlock } from '@/lib/types';
import { Section, SectionContent } from '@/components/ui/section';
import { Avatar, AvatarFallback } from '@/components/ui/avatar';

interface Props {
  block: TeamGridBlock;
}

const { block } = Astro.props;
---

<Section data-animate>
  {(block.label || block.headline) && (
    <SectionContent class="max-w-3xl">
      {block.label && (
        <span class="label-caps text-primary">{block.label}</span>
      )}
      {block.headline && (
        <h2 class="text-4xl md:text-5xl font-bold tracking-[-0.03em] leading-[1.05]">{block.headline}</h2>
      )}
      {block.subtitle && (
        <p class="text-lg text-muted-foreground leading-relaxed">{block.subtitle}</p>
      )}
    </SectionContent>
  )}

  <div class="space-y-12">
    {block.teams.map((team) => (
      <div class="border-2 border-foreground overflow-hidden">
        <div class="bg-foreground text-background px-8 py-6 flex flex-col md:flex-row md:items-center justify-between gap-4">
          <div class="flex items-center gap-4">
            <span class="text-2xl font-bold tracking-[-0.02em]">{team.teamName}</span>
            {team.sponsor && (
              <span class="label-caps text-background/40 flex items-center gap-2">
                <span class="w-1 h-1 bg-primary rounded-full"></span>
                {team.sponsor}
              </span>
            )}
          </div>
          {team.project && (
            <span class="text-sm text-background/60">{team.project}</span>
          )}
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-px bg-border">
          {team.members.map((member) => (
            <div class="bg-background p-6 flex flex-col items-center text-center group">
              <Avatar class="w-20 h-20 mb-4 border-2 border-border group-hover:border-primary transition-colors">
                {member.imageUrl ? (
                  <img
                    src={member.imageUrl}
                    alt={member.name}
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                ) : (
                  <AvatarFallback class="text-xl font-bold text-muted-foreground">
                    {member.name.split(' ').map((n: string) => n[0]).join('')}
                  </AvatarFallback>
                )}
              </Avatar>
              <h4 class="text-sm font-bold mb-1">{member.name}</h4>
              {member.role && (
                <span class="label-caps text-primary mb-1">{member.role}</span>
              )}
              {member.major && (
                <span class="text-xs text-muted-foreground">{member.major}</span>
              )}
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
</Section>

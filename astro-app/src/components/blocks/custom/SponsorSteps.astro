---
import type { SponsorStepsBlock } from '@/lib/types';
import CircleCheck from 'lucide-static/icons/circle-check.svg';
import { Button } from '@/components/ui/button';
import { Icon } from '@/components/ui/icon';
import { List, ListItem } from '@/components/ui/list';
import {
  Section,
  SectionActions,
  SectionContent,
  SectionProse,
  SectionSplit,
} from '@/components/ui/section';
import {
  Tile,
  TileContent,
  TileDescription,
  TileMedia,
  TileTitle,
} from '@/components/ui/tile';

interface Props {
  block: SponsorStepsBlock;
}

const { block } = Astro.props;
---

<Section>
  <SectionContent>
    {(block.headline || block.subtitle) && (
      <SectionProse>
        {block.headline && <h2>{block.headline}</h2>}
        {block.subtitle && <p>{block.subtitle}</p>}
      </SectionProse>
    )}
    <SectionActions>
      {
        block.links?.map(({ icon, text, ...link }, i) => (
          <Button variant={i === 0 ? 'default' : 'outline'} {...link}>
            {icon && <Icon name={icon} />}
            {text}
          </Button>
        ))
      }
    </SectionActions>
    <SectionSplit
      class="before:bg-border relative gap-8 before:absolute before:left-5.5 before:h-full before:w-px before:@5xl:top-5.5 before:@5xl:h-px before:@5xl:w-full"
    >
      {
        block.items.map(({ title, description, list }, i) => (
          <Tile class="items-start gap-8 gap-x-4 @max-5xl:flex-row">
            <TileMedia variant="icon">{i + 1}</TileMedia>
            <TileContent class="p-0">
              <TileTitle class="not-first:mt-4">{title}</TileTitle>
              <TileDescription>{description}</TileDescription>
              <List class="text-foreground not-first:mt-4">
                {list?.map((item) => (
                  <ListItem>
                    <CircleCheck />
                    {item}
                  </ListItem>
                ))}
              </List>
            </TileContent>
          </Tile>
        ))
      }
    </SectionSplit>
  </SectionContent>
</Section>

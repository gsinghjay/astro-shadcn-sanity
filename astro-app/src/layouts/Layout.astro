---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import VisualEditingMPA from "../components/VisualEditingMPA";
import { getSiteSettings } from "../lib/sanity";
import { urlFor } from "../lib/image";
import { stegaClean } from "@sanity/client/stega";

interface SeoProps {
  metaTitle?: string | null;
  metaDescription?: string | null;
  ogImage?: {
    asset?: { _id: string; url?: string | null; metadata?: { lqip?: string | null; dimensions?: unknown } | null } | null;
    alt?: string | null;
  } | null;
}

interface Props {
  title?: string;
  seo?: SeoProps | null;
  hideNav?: boolean;
}

const siteSettings = await getSiteSettings();
const defaultTitle = siteSettings?.siteName || "YWCC Industry Capstone";
const defaultDescription = siteSettings?.siteDescription || "";

const {
  title = defaultTitle,
  seo,
  hideNav = false,
} = Astro.props;

const cleanTitle = stegaClean(title);
const cleanSeoTitle = seo?.metaTitle ? stegaClean(seo.metaTitle) : null;
const cleanDescription = stegaClean(
  seo?.metaDescription ?? defaultDescription
);

const visualEditingEnabled =
  import.meta.env.PUBLIC_SANITY_VISUAL_EDITING_ENABLED === "true";

// Fallback to process.env for Cloudflare Pages git integration builds (no .env file)
const gaId = import.meta.env.PUBLIC_GA_MEASUREMENT_ID || process.env.PUBLIC_GA_MEASUREMENT_ID;

const fullTitle = cleanSeoTitle
  ? cleanSeoTitle
  : cleanTitle === stegaClean(defaultTitle)
    ? cleanTitle
    : `${cleanTitle} | ${stegaClean(defaultTitle)}`;

const ogTitle = cleanSeoTitle ?? cleanTitle;
const ogImageUrl = seo?.ogImage?.asset
  ? urlFor(seo.ogImage as Parameters<typeof urlFor>[0]).width(1200).height(630).url()
  : null;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={cleanDescription} />
    <meta property="og:title" content={ogTitle} />
    <meta property="og:description" content={cleanDescription} />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:type" content="website" />
    {ogImageUrl && <meta property="og:image" content={ogImageUrl} />}
    <meta
      http-equiv="Content-Security-Policy"
      content="default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://www.google-analytics.com; img-src 'self' https://cdn.sanity.io https://placehold.co data:; style-src 'self' 'unsafe-inline'; connect-src 'self' https://www.google-analytics.com https://*.sanity.io wss://*.sanity.io; font-src 'self'; frame-src 'self'"
    />
    <title>{fullTitle}</title>
    {gaId && (
      <Fragment>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`}></script>
        <script define:vars={{ gaId }}>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', gaId);
        </script>
      </Fragment>
    )}
  </head>
  <body class="antialiased">
    {!hideNav && <Header />}
    <main>
      <slot />
    </main>
    {!hideNav && <Footer />}
    <script src="../scripts/main.ts"></script>
    {visualEditingEnabled && <VisualEditingMPA client:only="react" />}
  </body>
</html>

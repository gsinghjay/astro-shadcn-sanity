---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import VisualEditingMPA from "../components/VisualEditingMPA";
import { getSiteSettings } from "../lib/sanity";
import { urlFor } from "../lib/image";
import { stegaClean } from "@sanity/client/stega";
import type { SeoProps } from "@/lib/types";

interface Props {
  title?: string;
  seo?: SeoProps | null;
  hideNav?: boolean;
  ogType?: string;
  template?: string;
  preloadImage?: string;
}

const siteSettings = await getSiteSettings();
const defaultTitle = siteSettings?.siteName || "YWCC Industry Capstone";
const defaultDescription = siteSettings?.siteDescription || "";

const {
  title = defaultTitle,
  seo,
  hideNav = false,
  ogType,
  template = 'default',
  preloadImage,
} = Astro.props;

const cleanTitle = stegaClean(title);
const cleanSeoTitle = seo?.metaTitle ? stegaClean(seo.metaTitle) : null;
const cleanDescription = stegaClean(
  seo?.metaDescription ?? defaultDescription
);

const visualEditingEnabled =
  import.meta.env.PUBLIC_SANITY_VISUAL_EDITING_ENABLED === "true";

// Fallback to process.env for Cloudflare Pages git integration builds (no .env file)
const gtmId = import.meta.env.PUBLIC_GTM_ID || process.env.PUBLIC_GTM_ID;

const fullTitle = cleanSeoTitle
  ? cleanSeoTitle
  : cleanTitle === stegaClean(defaultTitle)
    ? cleanTitle
    : `${cleanTitle} | ${stegaClean(defaultTitle)}`;

const ogTitle = cleanSeoTitle ?? cleanTitle;
const ogImageUrl = seo?.ogImage?.asset
  ? urlFor(seo.ogImage as Parameters<typeof urlFor>[0]).width(1200).height(630).url()
  : null;

const orgJsonLd = {
  "@context": "https://schema.org",
  "@type": "EducationalOrganization",
  "@id": `${Astro.url.origin}/#organization`,
  "name": stegaClean(siteSettings?.siteName) ?? "YWCC Industry Capstone",
  "url": Astro.url.origin,
  ...(cleanDescription && { "description": cleanDescription }),
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={cleanDescription} />
    <meta property="og:title" content={ogTitle} />
    <meta property="og:description" content={cleanDescription} />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:type" content={ogType ?? 'website'} />
    {ogImageUrl && <meta property="og:image" content={ogImageUrl} />}
    <meta name="twitter:card" content={ogImageUrl ? "summary_large_image" : "summary"} />
    <meta name="twitter:title" content={ogTitle} />
    <meta name="twitter:description" content={cleanDescription} />
    {ogImageUrl && <meta name="twitter:image" content={ogImageUrl} />}
    <meta
      http-equiv="Content-Security-Policy"
      content="default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com; img-src 'self' https://cdn.sanity.io https://placehold.co https://www.googletagmanager.com data:; style-src 'self' 'unsafe-inline'; connect-src 'self' https://www.google-analytics.com https://www.googletagmanager.com https://*.sanity.io wss://*.sanity.io; font-src 'self'; frame-src 'self' https://www.googletagmanager.com"
    />
    <script type="application/ld+json" set:html={JSON.stringify(orgJsonLd)} />
    {preloadImage && <link rel="preload" as="image" href={preloadImage} fetchpriority="high" />}
    <title>{fullTitle}</title>
    {gtmId && (
      <script define:vars={{ gtmId }}>
        (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
        new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
        j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
        'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
        })(window,document,'script','dataLayer',gtmId);
      </script>
    )}
    {gtmId && (
      <script define:vars={{ pagePath: Astro.url.pathname, pageTitle: fullTitle, pageTemplate: template }}>
        window.dataLayer = window.dataLayer || [];
        window.dataLayer.push({
          event: 'page_view',
          page: {
            path: pagePath,
            title: pageTitle,
            template: pageTemplate
          }
        });
      </script>
    )}
  </head>
  <body class="antialiased">
    {gtmId && (
      <noscript>
        <iframe src={`https://www.googletagmanager.com/ns.html?id=${gtmId}`}
          height="0" width="0" style="display:none;visibility:hidden"></iframe>
      </noscript>
    )}
    {!hideNav && <Header />}
    <main>
      <slot />
    </main>
    {!hideNav && <Footer />}
    <script src="../scripts/main.ts"></script>
    {visualEditingEnabled && <VisualEditingMPA client:only="react" />}
  </body>
</html>

{
  "name": "ywcc-capstone-template",
  "version": "1.0.0",
  "description": "Minimal Astro site with Sanity Studio",
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=astro-app\" \"npm run dev --workspace=studio\"",
    "dev:storybook": "concurrently \"npm run dev --workspace=astro-app\" \"npm run dev --workspace=studio\" \"npm run storybook --workspace=astro-app\"",
    "test": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:chromium": "npx playwright test --project=chromium",
    "test:e2e": "npx playwright test",
    "test:headed": "npx playwright test --headed --project=chromium",
    "test:integration": "npx playwright test --config=playwright.integration.config.ts",
    "test:unit": "npm run test:unit --workspace=astro-app",
    "test:unit:watch": "npm run test:unit:watch --workspace=astro-app",
    "test:unit:coverage": "npm run test:unit:coverage --workspace=astro-app",
    "storybook": "npm run storybook --workspace=astro-app"
  },
  "keywords": [
    "Sanity",
    "Astro",
    "Headless CMS",
    "Visual Editing",
    "Live Content API (LCAPI)",
    "Real-time"
  ],
  "bugs": {
    "url": "https://github.com/sanity-io/sanity-template-astro-clean/issues"
  },
  "homepage": "https://github.com/sanity-io/sanity-template-astro-clean#readme",
  "workspaces": [
    "studio",
    "astro-app"
  ],
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.58.2",
    "@seontechnologies/playwright-utils": "^3.13.1",
    "concurrently": "^9.1.0"
  },
  "type": "module"
}
